<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/details_bg"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_margin="@dimen/margin_button"
            android:background="@drawable/backbtn" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_button"
            android:background="@mipmap/nextbtn" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_listyourSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomLay"
        android:orientation="vertical"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_your_space"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
           />

            <View
                android:layout_width="180dp"
                android:layout_height="1.5dp"
                android:background="@color/Light_gray"
                android:layout_marginTop="@dimen/margin_relative_layout_20dp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/spinTypeLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_listyourSpace"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/margin_relative_layout_20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rounded_edittext"
            android:visibility="visible">

            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_edittext"
                android:dropDownSelector="@color/white"
                android:dropDownWidth="match_parent"


                android:visibility="visible" />

            <ImageView
                android:id="@+id/left_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@mipmap/down_arw" />

        </RelativeLayout>



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/rounded_edittext"
            android:visibility="visible"
            android:layout_marginTop="@dimen/margin_relative_layout_20dp">

            <Spinner
                android:id="@+id/bedsSpinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_edittext"
                android:dropDownSelector="@color/white"
                android:dropDownWidth="match_parent"


                android:visibility="visible" />

            <ImageView
                android:id="@+id/left_pic2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@mipmap/down_arw" />

        </RelativeLayout>

       <!-- <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:background="@drawable/rounded_edittext"
            android:visibility="visible">

            <Spinner
                android:id="@+id/roomSpinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_edittext"
                android:dropDownSelector="@color/white"
                android:dropDownWidth="match_parent"


                android:visibility="visible" />

            <ImageView
                android:id="@+id/left_pic1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@mipmap/down_arw" />

        </RelativeLayout>-->

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/margin_relative_layout_20dp"
            android:background="@drawable/rounded_edittext"
            android:visibility="visible">

            <Spinner
                android:id="@+id/restroomSpinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_edittext"
                android:dropDownSelector="@color/white"
                android:dropDownWidth="match_parent"


                android:visibility="visible" />

            <ImageView
                android:id="@+id/left_pic3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@mipmap/down_arw" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/margin_relative_layout_20dp"
            android:background="@drawable/rounded_edittext"
            android:visibility="visible">

            <Spinner
                android:id="@+id/accomSpinner"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rounded_edittext"
                android:dropDownSelector="@color/white"
                android:dropDownWidth="match_parent"


                android:visibility="visible" />

            <ImageView
                android:id="@+id/left_pic4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:background="@mipmap/down_arw" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
